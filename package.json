{
  "private": true,
  "name": "ascii-math-unicode",
  "version": "1.1.0",
  "author": "Erik Brinkman <erik.brinkman@gmail.com>",
  "license": "MIT",
  "scripts": {
    "fmt": "prettier --cache --write '*.json' 'src/**/*.ts' 'pages/**/*.tsx' 'components/**/*.tsx' '*.mjs'",
    "dev": "next dev",
    "lint": "tsc && eslint --cache 'src/**/*.ts' 'pages/**/*.tsx' 'components/**/*.tsx' && next lint",
    "test": "jest --coverage",
    "build:images": "<<< $'16\n32\n48\n128' xargs -I@ convert -background none -resize @x@ public/am.svg images/am@.png && convert images/am*.png favicon.ico",
    "build:bundle": "node build.mjs",
    "build:next": "next build && next export",
    "build": "yarn build:images && yarn build:bundle && yarn build:next",
    "prepack": "yarn lint && yarn test && yarn build",
    "postpack": "[ -f package.tgz ] && < package.tgz tar2zip > ascii-math-unicode.zip && rm package.tgz"
  },
  "files": [
    "/manifest.json",
    "/images/*.png",
    "/favicon.ico",
    "/*.js",
    "/out/**/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@mui/material": "^5.10.14",
    "@next/eslint-plugin-next": "^13.0.3",
    "@types/babel__core": "^7.1.20",
    "@types/babel__preset-env": "^7.9.2",
    "@types/chrome": "^0.0.202",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "@yarnpkg/esbuild-plugin-pnp": "^3.0.0-rc.15",
    "ajv": "^8.11.2",
    "babel-jest": "^29.3.1",
    "chalk": "5.1.2",
    "esbuild": "^0.15.14",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.1.5",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "jtd": "^0.1.1",
    "next": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tar-to-zip": "^3.0.0",
    "typescript": "4.8.4"
  },
  "resolutions": {
    "minimatch": "^3.0.5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "plugins": [
      "prettier",
      "jest",
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:jest/recommended",
      "plugin:jest/style",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:@next/next/recommended"
    ],
    "rules": {
      "no-warning-comments": [
        "warn",
        {
          "terms": [
            "fixme"
          ]
        }
      ]
    }
  },
  "packageManager": "yarn@3.2.4"
}
