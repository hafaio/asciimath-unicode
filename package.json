{
  "private": true,
  "name": "asciimath-unicode",
  "version": "1.1.0",
  "author": "Erik Brinkman <erik.brinkman@gmail.com>",
  "license": "MIT",
  "scripts": {
    "fmt": "prettier --cache --write '*.json' 'src/**/*.ts' 'pages/**/*.tsx' 'components/**/*.tsx' next.config.mjs && cargo fmt",
    "dev": "next dev",
    "lint": "tsc && eslint --cache 'src/**/*.ts' 'pages/**/*.tsx' 'components/**/*.tsx' && next lint && cargo clippy",
    "test": "jest --coverage",
    "build:wasm": "wasm-pack build -t web && cp pkg/convert_bg.wasm .",
    "build:images": "<<< $'16\n32\n48\n128' xargs -I@ convert -background none -resize @x@ public/am.svg images/am@.png && convert images/am*.png favicon.ico",
    "build:bundle": "esbuild src/worker.ts --outfile=service_worker.js --bundle --minify --define:import.meta.url=location.origin && esbuild src/convert.ts --outfile=convert.js --bundle --minify",
    "build:next": "next build && next export",
    "build": "yarn build:images && yarn build:wasm && yarn build:bundle && yarn build:next",
    "prepack": "yarn lint && yarn test && yarn build",
    "postpack": "[ -f package.tgz ] && < package.tgz tar2zip > asciimath-unicode.zip && rm package.tgz"
  },
  "files": [
    "/manifest.json",
    "/images/*.png",
    "/favicon.ico",
    "/convert.js",
    "/service_worker.js",
    "/convert_bg.wasm",
    "/out/**/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.14.1",
    "@next/eslint-plugin-next": "^13.4.12",
    "@types/babel__core": "^7.20.1",
    "@types/babel__preset-env": "^7.9.2",
    "@types/chrome": "^0.0.241",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.4",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@yarnpkg/esbuild-plugin-pnp": "^3.0.0-rc.15",
    "ajv": "^8.12.0",
    "babel-jest": "^29.6.1",
    "esbuild": "^0.18.15",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.1",
    "jtd": "^0.1.1",
    "next": "^13.4.12",
    "prettier": "^3.0.0",
    "prettier-plugin-organize-imports": "^3.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tar-to-zip": "^3.0.0",
    "typescript": "5.1.6"
  },
  "resolutions": {
    "minimatch": "^3.0.5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "plugins": [
      "prettier",
      "jest",
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:jest/recommended",
      "plugin:jest/style",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:@next/next/recommended"
    ],
    "rules": {
      "no-warning-comments": [
        "warn",
        {
          "terms": [
            "fixme"
          ]
        }
      ]
    }
  },
  "packageManager": "yarn@3.6.1"
}
